generator client {
  provider = "prisma-client-js"
  output   = "./prisma/generated"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Users_fjbs {
  id_fjbs Int @id @default(autoincrement())
  fullname_fjbs String
  email_fjbs String @unique
  password_fjbs String
  pet_fjbs Pets_fjbs[]
}

model Pets_fjbs {
  id_fjbs Int @id @default(autoincrement())
    name_fjbs String?
  photo_fjbs String
  estado_fjbs Estados_fjbs @default(disponible)
  raceId_fjbs Int
  categoryId_fjbs Int
  genderId_fjbs Int
  userId_fjbs Int

  race_fjbs Races_fjbs @relation(fields: [raceId_fjbs], references: [id_fjbs])
  category_fjbs Categories_fjbs @relation(fields: [categoryId_fjbs], references: [id_fjbs])
  gender_fjbs Genders_fjbs @relation(fields: [genderId_fjbs],references: [id_fjbs])
  user_fjbs Users_fjbs @relation(fields: [userId_fjbs], references: [id_fjbs])

}

enum Estados_fjbs {
  disponible
  adoptado
}

model Races_fjbs {
  id_fjbs Int @id @default(autoincrement())
  name_fjbs String
  pet_fjbs Pets_fjbs[]
}

model Categories_fjbs {
  id_fjbs Int @id @default(autoincrement())
  name_fjbs String 
  pet_fjbs Pets_fjbs[]
}

model Genders_fjbs {
  id_fjbs Int @id @default(autoincrement())
  name_fjbs String
  pet_fjbs Pets_fjbs[]
}
